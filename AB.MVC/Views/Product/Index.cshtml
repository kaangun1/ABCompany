@model ICollection<Product>

<a asp-action="Create" class="btn btn-primary">Create</a>
@if (Model == null || Model.Count == 0)
{
    <h3>Urun Listesi Boş</h3>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>               
                    <th>Product Name</th>
                    <th>Product Code</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Amount</th>
                    <th>Unite</th>
                    <th>Category</th>
                <th>Islem</th>

            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
               <tr>
                    <td>@item.Id</td>
                    <td>@item.ProductName</td>
                    <td>@item.ProductCode</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.Amount</td>
                    <td>@item.Unite.UniteName</td>
                    <td>
                   @*  @foreach(var cat in item.Categories)
                    {
                       string catnames=  cat.CategoryName + " ";
                            @catnames
                    } *@
                        
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="Update" 
                        asp-controller="Product" asp-route-hasan="@item.Id">Guncelle</a>
                        <a class="btn btn-danger" asp-action="Delete" 
                            asp-controller="Product"
                            asp-route-ayse="@item.Id">Sil</a>

                    </td>




               </tr>
            }
        </tbody>
    </table>
}
