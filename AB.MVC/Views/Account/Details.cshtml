
@model AB.MVC.Models.VMS.AccountVM.EditVM

<div class="card">
    <div class="card-header">

         <h3>@Model.Ad @Model.Soyad</h3>
    </div>
    <div class="card-body">
        <form asp-action="Details" asp-controller="Account">
            <input type="hidden" asp-for="@Model.Id"/>
            <div class="mt-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="">
                <label asp-for="Ad" class="form-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>

            </div>
            <div class="">
                <label asp-for="Soyad" class="form-label"></label>
                <input asp-for="Soyad" class="form-control" />
                <span asp-validation-for="Soyad" class="text-danger"></span>

            </div>
            <div class="">
                <label asp-for="Gsm" class="form-label"></label>
                <input asp-for="Gsm" class="form-control" />
                <span asp-validation-for="Gsm" class="text-danger"></span>

            </div>
            <div class="">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>

            </div>
            <div class="">
                <label asp-for="RePassword" class="form-label"></label>
                <input asp-for="RePassword" class="form-control" />
                <span asp-validation-for="RePassword" class="text-danger"></span>

            </div>
            <div class="">
                <button type="submit" class="btn btn-primary">Giris</button>
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}