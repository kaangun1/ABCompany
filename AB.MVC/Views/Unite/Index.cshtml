@model List<Unite>
<a class="btn btn-primary" asp-action="Create">Create</a>
    <table class="table table-hover">
    <tr>
        <th>Id</th>
        <th>Unite Name</th>
        <th>Create Date</th>
        <th>Islem</th>
    </tr>
     <tbody>
         @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UniteName</td>
                <td>@item.CreateDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Update" asp-controller="Unite" class="btn btn-success" asp-route-id="@item.Id">Update</a>
                    <a asp-action="Delete" asp-controller="Unite" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>

                </td>

            </tr>
        }
    </tbody>
</table>
</table>